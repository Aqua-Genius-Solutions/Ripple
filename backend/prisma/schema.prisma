model User {
  name        String
  surname     String
  email       String
  address     String
  isPro       Boolean
  Referrals   Int[]
  Bubbles     Int
  Reference   Int
  isAdmin     Boolean
  uid         String       @id @default("0")
  Image       String
  Bill        Bill[]
  creditCards CreditCard[]
  LikedEvents Events[]     @relation("UserLikedEvents")
  LikedNews   News[]       @relation("UserLikedNews")
}

model Events {
  id           Int      @id @default(autoincrement())
  author       String
  link         String
  date         DateTime
  participants Int[]
  image        String
  LikedBy      User[]   @relation("UserLikedEvents")
}

model News {
  id          Int      @id @default(autoincrement())
  author      String
  description String
  link        String
  date        DateTime
  image       String
  LikedBy     User[]   @relation("UserLikedNews")
}

model Rewards {
  id          Int    @id @default(autoincrement())
  name        String
  price       Int
  image       Int
  description String
}

model CreditCard {
  id      Int      @id @default(autoincrement())
  number  Int
  CVC     Int
  expDate DateTime
  ownerId String
  owner   User     @relation(fields: [ownerId], references: [uid])
}

model Bill {
  id          Int      @id @default(autoincrement())
  price       Int
  NFM         Int
  consumption Int
  NormalConsp Int
  paid        Boolean
  startDate   DateTime
  endDate     DateTime
  userId      String
  User        User     @relation(fields: [userId], references: [uid])
}
